@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}
@section Styles {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/vendor/fonts/circular-std/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/libs/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/vendor/fonts/fontawesome/css/fontawesome-all.css" asp-append-version="true">

}


    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><img class="logo-img" src="~/assets/images/logo.png" alt="logo" width="150" height="42"><span class="splash-description">Por favor ingrese su información de usuario.</span></div>
            <div class="card-body">
                <form  id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="Nombre de usuario">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Clave">
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Input.RememberMe" class="custom-control custom-checkbox">
                        <input asp-for="Input.RememberMe"  class="form-check-input" type="checkbox">@Html.DisplayNameFor(m => m.Input.RememberMe)<!--span class="custom-control-label">Remember Me</span-->
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>

            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="#" class="footer-link">Crea una cuenta</a></div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="#" class="footer-link">Has olvidado tu contraseña</a>
                </div>
            </div>
        </div>
    </div>












